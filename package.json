{
  "name": "trillo",
  "version": "1.0.0",
  "main": "index.html",
  "scripts": {
    "watch:sass": "sass src/sass/main.scss src/css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel watch:sass devserver",
    "compile:sass": "sass src/sass/main.scss src/css/style.compiled.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' src/css/style.compiled.css -o src/css/style.prefix.css",
    "compress:css": "sass src/css/style.prefix.css src/css/style.css --style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "nevo",
  "license": "ISC",
  "description": "trillo booking app",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^11.0.0",
    "sass": "^1.79.4"
  }
}
